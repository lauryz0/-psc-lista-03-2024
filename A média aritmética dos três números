programa
{
	funcao inicio()
	{
		real numero1, numero2, numero3, maior, menor, media
		
		escreva("Digite o primeiro numero: ")
		leia(numero1)
		escreva("Digite o segundo numero: ")
		leia(numero2)
		escreva("Digite o terceiro numero: ")
		leia(numero3)
		
		
		maior = numero1
		se(numero2 > maior) {
			maior = numero2
		}
		se(numero3 > maior) {
			maior = numero3
		}
		
		
		menor = numero1
		se(numero2 < menor) {
			menor = numero2
		}
		se(numero3 < menor) {
			menor = numero3
		}
		
		
		media = (numero1 + numero2 + numero3) / 3
		
		
		escreva("O maior numero e: ", maior, "\n")
		escreva("O menor numero e: ", menor, "\n")
		escreva("A media aritmetica dos numeros e: ", media)
	}
}
		
